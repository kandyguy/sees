<h3>
	DEMO: STUDENT DETAILS SHOULD COME HERE
</h3>
<h3>
	ADMIN REVIEW FOR <%= @student.full_name.upcase %>
</h3>
<%= form_for(@comment) do |f| %>
  <div class="field">
    <%= f.hidden_field :student_id, :value => params[:id] %>
  </div>
  <div class="field">
    <%= f.label :comment_text %><br />
    <%= f.text_area :comment_text %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%#= button_to "Reject", comments_path, :method => "get" %>
    <%#= button_to "Forward To Principal", comments_path, :method => "get" %>
  </div>
  <%= link_to "back", root_path %>	
<% end %>
